<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/cardCornerRadius"
    android:background="@drawable/custom_border">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/adapter_cardview_margin"
        android:elevation="@dimen/cardview_vertical_padding"
        android:background="@drawable/custom_border">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:padding="@dimen/outer_layout_padding"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/layout_inner_padding"
                    android:text="@string/orderid"
                    android:textSize="@dimen/text_order"
                    android:textStyle="bold|normal"
                    android:textColor="@color/blackTextColor"
                    android:textAlignment="textStart"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/orderId"
                    android:padding="@dimen/layout_inner_padding"
                    android:textSize="11sp"
                    android:textStyle="normal"
                    android:textColor="@color/colorAccent"
                    android:textAlignment="textStart"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/layout_inner_padding"
                    android:text="@string/total_price"
                    android:textSize="@dimen/text_order"
                    android:textStyle="bold|normal"
                    android:textColor="@color/blackTextColor"
                    android:textAlignment="textStart"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tprice"
                    android:padding="@dimen/layout_inner_padding"
                    android:textSize="11sp"
                    android:textStyle="normal"
                    android:textColor="@color/blackTextColor"
                    android:textAlignment="textStart"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/layout_inner_padding"
                    android:text="@string/username"
                    android:textSize="@dimen/text_order"
                    android:textStyle="bold|normal"
                    android:textColor="@color/blackTextColor"
                    android:textAlignment="textStart"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/username"
                    android:padding="@dimen/layout_inner_padding"
                    android:textSize="11sp"
                    android:textStyle="normal"
                    android:textColor="@color/black"
                    android:textAlignment="textStart"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/layout_inner_padding"
                    android:text="@string/order_date"
                    android:textSize="@dimen/text_order"
                    android:textStyle="bold|normal"
                    android:textColor="@color/blackTextColor"
                    android:textAlignment="textStart"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/odate"
                    android:padding="@dimen/layout_inner_padding"
                    android:textSize="11sp"
                    android:textStyle="normal"
                    android:textColor="@color/blackTextColor"
                    android:textAlignment="textStart"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/layout_inner_padding"
                    android:text="@string/status"
                    android:textSize="@dimen/text_order"
                    android:textStyle="bold|normal"
                    android:textColor="@color/blackTextColor"
                    android:textAlignment="textStart"/>

                <TextView
                    android:id="@+id/statusallorder"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/layout_inner_padding"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorAccent"
                    android:textSize="11sp"
                    android:textStyle="normal" />

                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!--<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/layout_inner_padding"
                    android:text="Dispatch Date:"
                    android:textSize="@dimen/text_order"
                    android:textStyle="bold|normal"
                    android:textColor="@color/blackTextColor"
                    android:textAlignment="textStart"/>-->
                <TextView
                    android:id="@+id/dispatchDateTv"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/layout_inner_padding"
                    android:textAlignment="textStart"
                    android:hint="Dispatch Date"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    android:textStyle="normal" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/layout_inner_padding"
                    android:text="Delivery Date:"
                    android:textSize="@dimen/text_order"
                    android:textStyle="bold|normal"
                    android:textColor="@color/blackTextColor"
                    android:textAlignment="textStart"/>

                <TextView
                    android:id="@+id/deliveredDateTv"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/layout_inner_padding"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:hint="Delivery date"
                    android:textSize="11sp"
                    android:textStyle="normal" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/layout_inner_padding"
                    android:text="dispatched_by:"
                    android:textSize="@dimen/text_order"
                    android:textStyle="bold|normal"
                    android:textColor="@color/blackTextColor"
                    android:textAlignment="textStart"/>

                <TextView
                    android:id="@+id/dispatchedByTv"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/layout_inner_padding"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:hint="dispatched_by"
                    android:textSize="11sp"
                    android:textStyle="normal" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/layout_inner_padding"
                    android:text="delivered By:"
                    android:textSize="@dimen/text_order"
                    android:textStyle="bold|normal"
                    android:textColor="@color/blackTextColor"
                    android:textAlignment="textStart"/>

                <TextView
                    android:id="@+id/deliveredByTv"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/layout_inner_padding"
                    android:textAlignment="textStart"
                    android:hint="deliveredBy"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    android:textStyle="normal" />


            </LinearLayout>
            <RelativeLayout
                android:id="@+id/relative"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp">


                <TextView
                    android:id="@+id/changeStatusTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="0dp"
                    android:padding="@dimen/layout_inner_padding"
                    android:text="Change Status"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorAccent"
                    android:textSize="15sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/viewmoreTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/layout_inner_padding"
                    android:textAlignment="textStart"
                    android:text="View More"
                    android:textColor="@color/colorAccent"
                    android:textSize="15sp"
                    android:textStyle="normal"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"/>
            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>