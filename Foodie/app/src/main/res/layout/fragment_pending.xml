<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.app.foodie.PendingFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:id="@+id/searchlist"
                android:hint="Search by order id"
                android:background="@drawable/dashboard_border"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:padding="7dp"
                tools:ignore="RtlCompat" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/item_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:layout_below="@+id/searchlist"
                android:scrollbars="vertical" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/myorderLayout"
                android:gravity="center"
                android:visibility="gone"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:padding="10dp"
                    android:textStyle="italic"
                    android:layout_below="@+id/imageView6"
                    android:layout_centerHorizontal="true"
                    android:text="No Orders" />
            </RelativeLayout>
            <ProgressBar
                android:visibility="gone"
                android:id="@+id/progressBarDil"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />

        </RelativeLayout>



    </LinearLayout>











</RelativeLayout>
