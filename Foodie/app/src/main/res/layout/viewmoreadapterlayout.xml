<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/cardCornerRadius"
    android:background="@drawable/custom_border"
    android:layout_margin="10dp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/adapter_cardview_margin"
        android:elevation="@dimen/cardview_vertical_padding"
        android:padding="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            >
        <TextView
            android:id="@+id/nameTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"
            android:hint="Name"
            android:singleLine="true"
            android:ellipsize="end"
            android:lines="1"

            />
            <TextView
                android:id="@+id/descriptionTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:hint="description"
                android:singleLine="true"
                android:ellipsize="end"
                android:lines="1"/>
            <TextView
                android:id="@+id/priceTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:hint="price"
                android:singleLine="true"
                android:ellipsize="end"
                android:lines="1"/>
            <TextView
                android:id="@+id/item_countTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:hint="item_count"
                android:singleLine="true"
                android:ellipsize="end"
                android:lines="1"/>
            <TextView
                android:id="@+id/custidTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:hint="order_by_cust_id"
                android:singleLine="true"
                android:ellipsize="end"
                android:lines="1"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/purchaseidTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:hint="purchase_status"
                android:singleLine="true"
                android:ellipsize="end"
                android:lines="1"
                android:visibility="gone"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
